@model News
@{
    ViewData["Title"] = "编辑";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js?t=2"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/xheditor-1.2.2/xheditor-1.2.2.min.js"></script>
    <script src="~/lib/xheditor-1.2.2/xheditor_lang/zh-cn.js"></script>
}
<div class="panel admin-panel">
    <div class="panel-head"><strong><span class="icon-pencil-square-o"></span>新闻信息</strong></div>
    <div class="body-content">
        <form method="post" class="form-x" action="">
            <div class="form-group">
                <div class="label">
                    <label asp-for="Title"></label>
                </div>
                <div class="field">
                    <input asp-for="Title" type="text" class="input" value="@Model.Title" />
                    <span asp-validation-for="Title" class="error"></span>
                </div>
            </div>
